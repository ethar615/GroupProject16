<%- include('Partials/header'); -%>
<%- include('Partials/main_nav'); -%>
<section id="contact">
    <style>
        /*center CONTACT ME title with extra space above*/
        .contact-title {
            text-align: center;
            margin-top: 50px;
            margin-bottom: 30px;
        }
        /*center-align and stack contact form elements*/
        .phpEmailForm {
            display: flex;
            flex-direction: column;
            align-items: center;
            max-width: 400px;
            margin: 0 auto;
        }
        .phpEmailForm label, 
        .phpEmailForm input[type="text"], 
        .phpEmailForm input[type="email"], 
        .phpEmailForm textarea {
            width: 100%;
            margin-bottom: 15px;
        }
        /*align "Maximum characters" and buttons to the left*/
        .char-limit,
        .button-group {
            width: 100%;
            text-align: left;
            font-size: small;
            margin-top: -5px;
            margin-bottom: 10px;
        }
        /*buttons stacked under "Maximum characters" text*/
        .button-group {
            display: flex;
            gap: 10px;
        }
    </style>

    <article class="contact container">
        <div class="display-4 font-weight-bold contact-title">CONTACT <span class="text-primary">ME</span></div>
        <form action="#" method="post" class="phpEmailForm">
            <label for="name">Name</label>
            <input
                type="text"
                id="name"
                name="name"
                placeholder="Your Name"
                required
            />
            <label for="email">Email</label>
            <input
                type="email"
                id="email"
                name="email"
                placeholder="Your Email"
                required
            />
            <label for="subject">Subject</label>
            <input
                type="text"
                id="subject"
                name="subject"
                placeholder="Subject"
                required
            />
            <label for="message">Message</label>
            <textarea
                id="message"
                name="message"
                style="height: 150px"
                placeholder="Your Message"
                required
            ></textarea>
            <p class="char-limit">Maximum characters: 500</p>
            <div class="button-group">
                <button class="button" type="submit">Submit</button>
                <input type="reset" value="Reset Form" />
            </div>
        </form>
    </article>
</section>
<%- include('Partials/footer'); -%>
